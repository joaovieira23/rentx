{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "paths": {
         "@modules/*": ["modules/*"],
         "@config/*": ["config/*"],
         "@shared/*": ["shared/*"],
         "@errors/*": ["errors/*"],
         "@utils/*": ["utils/*"],
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
   }
}